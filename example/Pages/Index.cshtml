@page
@model IndexModel
@* The manifest can only be accessed after building the assets with 'npm run build'. *@
@inject ViteManifest Manifest
@{
	ViewData["Title"] = "Vite + ASP.NET + TS";
}

@section HeadContent {
	<environment include="Production">
		<link rel="stylesheet" href="~/@Manifest["main.css"]!.File" asp-append-version="true" />
	</environment>
}

<div>
	<a href="https://vitejs.dev" target="_blank">
		<img src="~/vite.svg" class="logo" alt="Vite logo" />
	</a>
	<a href="https://dotnet.microsoft.com/" target="_blank">
		<img src="~/dotnet.svg" class="logo" alt="Dotnet logo" />
	</a>
	<a href="https://www.typescriptlang.org/" target="_blank">
		<img src="~/typescript.svg" class="logo vanilla" alt="TypeScript logo" />
	</a>
	<h1>Vite + ASP.NET + TypeScript</h1>
	<div class="card">
		<button id="counter" type="button"></button>
	</div>
	<p class="read-the-docs">
		Click on the Vite, ASP.NET and TypeScript logos to learn more
	</p>
</div>

@section Scripts {
	<environment include="Development">
		<script type="module" src="~/main.ts"></script>
	</environment>
	<environment include="Production">
		<script type="module" src="~/@Manifest["main.ts"]!.File" asp-append-version="true"></script>
	</environment>
}
